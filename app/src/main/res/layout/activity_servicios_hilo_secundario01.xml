<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jstalin.servicios.ServiciosHiloSecundario01Activity">

    <Button
        android:id="@+id/button_iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/boton_iniciar"
        android:onClick="accionIniciar"/>

    <Button
        android:id="@+id/button_parar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/boton_parar"
        android:onClick="accionParar"/>

</LinearLayout>
